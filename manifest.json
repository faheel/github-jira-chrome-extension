{
    "manifest_version": 2,

    "name": "GitHub to JIRA Links",
    "version": "1.0",

    //"default_locale": "en",
    "description": "This extension detects JIRA issue tags in GitHub pull request and commit title, logs, comments, and description fields, and turns them into hyperlinks.",
    "icons" : {
        "16" : "img/64jira.png",
        "64" : "img/64jira.png",
        "128" : "img/64jira.png"
    },

    "browser_action": {
        "default_icon": "img/64jira.png",
        "default_popup": "src/popup.html",
        "default_title": "GitHub to JIRA Links"
    },

    "author": "Jonathan Tsai (@jontsai)",

    "content_scripts": [
        {
            "matches": ["https://github.com/*"],
            "css": [],
            "js": [
                "src/vendor/jquery-3.2.1.min.js",
                "src/vendor/lodash-4.17.4.min.js",
                "src/js/github_jira.js"
            ]
        }
    ],

    "options_ui": {
        // Required.
        "page": "src/options.html",
        // Recommended.
        "chrome_style": true
    },

    "permissions": [
        "storage"
    ],

    "short_name": "GitHub JIRA"
}
